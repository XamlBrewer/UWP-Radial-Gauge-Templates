<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XamlBrewer.Uwp.RadialGaugeTemplates">

    <!-- Theme Resources -->
    <!-- Header -->
    <SolidColorBrush x:Key="TitlebarBackgroundBrush"
                     Color="#FFD4A56A" />
    <SolidColorBrush x:Key="StatusbarBackgroundBrush"
                     Color="#FFD4A56A" />
    <!-- Splitview Pane -->
    <SolidColorBrush x:Key="SplitViewBackgroundBrush"
                     Color="#FF486F88" />
    <SolidColorBrush x:Key="SplitViewForegroundBrush"
                     Color="White" />
    <SolidColorBrush x:Key="SplitViewHighlightBrush"
                     Color="Orange" />
    <!-- Splitview Content -->
    <SolidColorBrush x:Key="PageBackgroundBrush"
                     Color="#FFFFF7AA" />
    <SolidColorBrush x:Key="PageForegroundBrush"
                     Color="#FF486F88" />

    <!-- Gauge Colors -->
    <SolidColorBrush x:Name="ScaleBrush"
                     Color="#FFD4A56A" />
    <SolidColorBrush x:Name="ScaleTickBrush"
                     Color="#FFFFF7AA" />
    <SolidColorBrush x:Name="TrailBrush"
                     Color="#FF486F88" />
    <SolidColorBrush x:Name="TickBrush"
                     Color="#FFD4CA6A" />
    <SolidColorBrush x:Name="NeedleBrush"
                     Color="#FFCC3D29" />
</ResourceDictionary>
